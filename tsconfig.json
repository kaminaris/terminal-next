{
	"compilerOptions": {
		"target": "ES2017",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true
	},
	"typedocOptions": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"disableSources": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/test/*"
	]
}